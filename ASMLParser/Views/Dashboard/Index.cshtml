@{
    ViewData["Title"] = "Dashboard";
}
@using System.Reflection.PortableExecutable
@model DashboardViewModel;

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div class="dashboard-totalborder">
    <div class="dashboard-totaltext">
        <div>
            <h5>Total machines</h5>
            <span>@Model.TotalMachines</span>
        </div>
        <div>
            <h5>Total events</h5>
            <span>@Model.TotalEvents</span>
        </div>
        <div>
            <h5>Total parameters</h5>
            <span>@Model.TotalParameters</span>
        </div>
    </div>
</div>

<div class="dashboard-div">
    @if (Model.Machines.Count == 0)
    {
        <span class="fw-bold text-muted">No machines found.</span>
    }
    else
    {
        int machineRowNumber = 1;
        <table class="datatable">
            <tr>
                <th></th>
                <th>MachineID</th>
                <th>Event</th>
                <th>Parameter</th>
            </tr>
            <h3>Filters</h3>
            <form asp-action="Filter" asp-controller="Dashboard" method="post">
                <a class="btn btn-primary m-1 col-sm-1" data-toggle="collapse" href="#collapseDiv" role="button" aria-expanded="false" aria-controls="collapseDiv">
                    Name ▼
                </a>
                <div class="collapse" id="collapseDiv">
                    <div class="row">
                        <div class="border border-secondary rounded p-2 bg-white col-sm-auto m-3">
                            @foreach (string machineName in Model.MachineNames)
                            {
                                <input @(Model.Filters.Contains(machineName) ? "checked" : "") type="checkbox" name="@machineName">
                                <label>@machineName</label>
                                <br>
                            }
                        </div>
                    </div>
                    <input class="btn btn-success m-1 col-sm-1" type="submit" value="Pas toe">
                </div>
                
            </form>
            @foreach (MachineViewModel machine in Model.Machines)
            {
                foreach (EventViewModel eventModel in machine.Events)
                {
                    foreach (ParameterViewModel parameter in eventModel.Parameters)
                    {
                        <tr>
                            <td>@machineRowNumber</td>
                            <td>@machine.Name</td>
                            <td>@eventModel.Name</td>
                            <td>@parameter.Name</td>
                        </tr>
                        machineRowNumber++;
                    }
                }
            }
        </table>
    }
</div>