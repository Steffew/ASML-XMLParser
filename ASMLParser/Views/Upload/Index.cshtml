@{
    ViewData["Title"] = "Upload";
}

<div class="text-center" style="height: 100vh;">
    <h1 class="display-4">Upload</h1>
    <p>This is the XML-upload page.</p>
    <form asp-action="UploadFile" asp-controller="Upload" method="POST" enctype="multipart/form-data">
        <input name="file" type="file"></input>
        <button type="submit">Submit</button>
    </form>
    <br/>
    <p class="fw-bold alert-danger rounded-2">@ViewBag.ErrorMessage</p>
</div>
