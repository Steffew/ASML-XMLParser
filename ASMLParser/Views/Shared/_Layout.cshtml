<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ASML EDA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ASMLXMLParser.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/styles.css" asp-asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/dashboard.css" asp-asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-nav border-bottom box-shadow mb-3">
        <div class="container-fluid">
                <a class="nav-space me-3" asp-area="" asp-controller="Dashboard" asp-action="Index">
                <img class="nav-logo" src="~/images/logo.png" alt="ASML Logo">
            </a>
            <button class="navbar-toggler nav-border" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon nav-burger"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex">
                        <li class="nav-item">
                            <a class="nav-link nav-text" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-text" asp-area="" asp-controller="Upload" asp-action="Upload">Upload</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a class="nav-link nav-text" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                    </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - ASML EDA - <a asp-area="" asp-controller="Dashboard" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>