@{
    Layout = null;
}

<header>
    <title>ASML EDA Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASMLXMLParser.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-asp-append-version="true" />
</header>

<body>
    <div class="login-div">
        <div>
            <input class="login-form" placeholder="username" type="text">
            <input class="login-form" placeholder="password" type="password">
        </div>

        <div class="button-container mt-4">
            <div class="button-wrapper">
                <a asp-action="Forgot">Forgot password?</a>
            </div>
            <div class="button-wrapper">
                <button class="generic-button" asp-action="Login" type="button">Log in</button>
            </div>
        </div>
    </div>
</body>